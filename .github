# .github/workflows/deploy.yml - Robot GitHub Actions
name: ğŸ¤– Automatyczne budowanie i deploy RETRO_CSSA

# Kiedy robot ma siÄ™ wÅ‚Ä…czyÄ‡
on:
  push:
    branches: [ main ]  # Za kaÅ¼dym razem gdy push na branch main
  pull_request:
    branches: [ main ]

# Zadania robota
jobs:
  build-and-deploy:
    runs-on: ubuntu-latest  # Robot dziaÅ‚a na Ubuntu
    
    steps:
    # KROK 1: Pobierz kod z repozytorium
    - name: ğŸ“¥ Pobierz kod
      uses: actions/checkout@v4
      
    # KROK 2: Zainstaluj Node.js
    - name: ğŸ”§ Zainstaluj Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '18'
        
    # KROK 3: Zainstaluj zaleÅ¼noÅ›ci
    - name: ğŸ“¦ Zainstaluj zaleÅ¼noÅ›ci
      run: npm install
      
    # KROK 4: Zbuduj projekt (uruchom nasz build-script.js)
    - name: ğŸ—ï¸ Zbuduj projekt
      run: npm run build
      
    # KROK 5: SprawdÅº czy index.html zostaÅ‚ utworzony
    - name: âœ… SprawdÅº wynik
      run: |
        if [ -f index.html ]; then
          echo "âœ… index.html zostaÅ‚ utworzony!"
          echo "ğŸ“Š Rozmiar pliku: $(wc -c < index.html) bajtÃ³w"
        else
          echo "âŒ Brak pliku index.html!"
          exit 1
        fi
        
    # KROK 6: Deploy na GitHub Pages (tylko na main branch)
    - name: ğŸš€ Deploy na GitHub Pages
      if: github.ref == 'refs/heads/main'
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./
        publish_branch: gh-pages

