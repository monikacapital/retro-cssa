# .github/workflows/deploy.yml - Robot GitHub Actions
name: 🤖 Automatyczne budowanie i deploy RETRO_CSSA

# Kiedy robot ma się włączyć
on:
  push:
    branches: [ main ]  # Za każdym razem gdy push na branch main
  pull_request:
    branches: [ main ]

# Zadania robota
jobs:
  build-and-deploy:
    runs-on: ubuntu-latest  # Robot działa na Ubuntu
    
    steps:
    # KROK 1: Pobierz kod z repozytorium
    - name: 📥 Pobierz kod
      uses: actions/checkout@v4
      
    # KROK 2: Zainstaluj Node.js
    - name: 🔧 Zainstaluj Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '18'
        
    # KROK 3: Zainstaluj zależności
    - name: 📦 Zainstaluj zależności
      run: npm install
      
    # KROK 4: Zbuduj projekt (uruchom nasz build-script.js)
    - name: 🏗️ Zbuduj projekt
      run: npm run build
      
    # KROK 5: Sprawdź czy index.html został utworzony
    - name: ✅ Sprawdź wynik
      run: |
        if [ -f index.html ]; then
          echo "✅ index.html został utworzony!"
          echo "📊 Rozmiar pliku: $(wc -c < index.html) bajtów"
        else
          echo "❌ Brak pliku index.html!"
          exit 1
        fi
        
    # KROK 6: Deploy na GitHub Pages (tylko na main branch)
    - name: 🚀 Deploy na GitHub Pages
      if: github.ref == 'refs/heads/main'
      uses: peaceiris/actions-gh-pages@v3
      with:
        github_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./
        publish_branch: gh-pages

